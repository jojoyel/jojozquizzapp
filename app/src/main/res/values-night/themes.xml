<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.JojozQuizz" parent="Theme.MaterialComponents">
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondaryDark</item>

        <item name="android:textColor">@color/colorText</item>

        <item name="android:colorBackground">@color/background_night</item>

        <item name="android:statusBarColor" tools:targetApi="1">@color/colorPrimaryDark</item>

        <item name="android:fontFamily">@font/caviar_font</item>
    </style>

    <style name="ActivityTitle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="DialogsStyle">
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle">
        <item name="fontFamily">@font/caviar_font</item>
        <item name="color">@color/colorSecondaryDark</item>
    </style>

    <style name="NegativeButtonStyle">
        <item name="fontFamily">@font/caviar_font</item>
        <item name="color">@color/colorPrimaryDark</item>
    </style>

    <style name="RecyclerItemStyle">
        <item name="background">@color/background_night</item>
    </style>

    <style name="ButtonPrimaryStyle">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ButtonSecondaryStyle">
        <item name="backgroundTint">@color/colorSecondaryDark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
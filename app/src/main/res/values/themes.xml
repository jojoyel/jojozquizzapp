<resources xmlns:tools="http://schemas.android.com/tools">

	<style name="Theme.JojozQuizz" parent="Theme.MaterialComponents.Light.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorSecondary">@color/colorSecondary</item>
		<item name="android:textColor">@color/black</item>

		<item name="android:colorBackground">@color/background_light</item>

		<item name="android:statusBarColor" tools:targetApi="1">@color/colorPrimaryDark</item>

		<item name="android:fontFamily">@font/caviar_font</item>
	</style>

	<style name="ActivityTitle">
		<item name="android:textColor">@color/colorPrimary</item>
		<item name="android:textSize">30sp</item>
		<item name="android:layout_marginTop">30dp</item>
		<item name="android:layout_marginEnd">30dp</item>
		<item name="android:padding">20dp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="DialogsStyle">
		<item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
		<item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
	</style>

	<style name="PositiveButtonStyle">
		<item name="fontFamily">@font/caviar_font</item>
		<item name="color">@color/colorSecondary</item>
	</style>

	<style name="NegativeButtonStyle">
		<item name="fontFamily">@font/caviar_font</item>
		<item name="color">@color/colorPrimary</item>
	</style>

	<style name="RecyclerItemStyle">
		<item name="android:backgroundTint">@color/background_light</item>
	</style>

	<style name="ButtonPrimaryStyle">
		<item name="backgroundTint">@color/colorPrimary</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="ButtonSecondaryStyle">
		<item name="backgroundTint">@color/colorSecondary</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="Theme.JojozQuizz.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="Theme.JojozQuizz.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="Theme.JojozQuizz.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>